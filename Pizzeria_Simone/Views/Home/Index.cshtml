<a href="@Url.Action("create","pizza")"> aggiungi pizza </a>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mt-3 mb-3">Lista pizze</h1>
            </div>
        </div>
    </div><div class="row js_wait_pizza text-center">
        <div class="col-12">
            <h3>Sto aspettando le pizze ...</h3>
        </div>
    </div>
    <div class="row js_no_pizza text-center d-none">
        <div class="col-12">
            <h3>Non hai inserito nessuna pizza</h3>
        </div>
    </div>
    <div class="row js_pizza_cards d-none">
        <!-- qui verranno mostrati gli elementi -->
    </div>
</div>

@section Scripts {

    <script type="text/javascript">

        loadPizza();




        function loadPizza(){
            axios.get('/api/PizzApi/Get').then((result) => {
                // Codice che verrà eseguito quando arrivano i dati dalla mia web api
                console.log("Ho ricevuto le pizze, evviva!");

                if(result.data.length == 0){
                    document.querySelector('.js_wait_pizza').classList.add('d-none');
                    document.querySelector('.js_no_pizza').classList.remove('d-none');
                } else {
                    document.querySelector('.js_wait_pizza').classList.add('d-none');
                    document.querySelector('.js_pizza_cards').classList.remove('d-none');

                    result.data.forEach(listapizza => {
                        document.querySelector('.js_pizza_cards').innerHTML += 
                            `
                            <div class="col-12 col-md-4 p-2">
                               <div class="card post">
                                  <img src="${listapizza.image}" class="card-img-top" alt="${listapizza.description}">
                                  <div class="card-body">
                                    <h5 class="card-title">${listapizza.title}</h5>
                                    <p class="card-text">${listapizza.description}</p>
                                    <p class="card-text">${listapizza.price}</p>
                                  </div>
                                </div>
                            </div>
                            `
                    });
                }

            }

            ).catch((error) => {
                console.log("C'è stato un errore: " + error);
            });
        }
    
    </script>

    

}
